{
  "openapi": "3.0.1",
  "info": {
    "title": "OpenApi specification - Arfaoui",
    "description": "OpenApi documentation for Admin Module Demo",
    "termsOfService": "Terms of service",
    "contact": {
      "name": "Wael Arfaoui",
